<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/star_bg">
    <RelativeLayout
        android:id="@+id/result_top_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/bg_topbar">
        <TextView
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/text_topbar"
            android:text="YUSHAN NOTE"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/div_white"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/result_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/text_yellow"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/add_message_btn"
            android:layout_height="45dp"
            android:layout_width="45dp"
            android:background="@mipmap/pencil_square"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/result_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/result_top_bar"
        android:layout_above="@id/result_tab_bar"
        />
    <RelativeLayout android:id="@+id/nonmessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/result_top_bar"
        android:layout_above="@id/result_tab_bar"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="请在这里写下你的第一句话吧~"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textSize="15sp"
            />
    </RelativeLayout>
</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    >
    <LinearLayout
        android:id="@+id/message_content_topbar"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:background="@color/text_yellow"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/message_content_return"
                android:layout_height="22dp"
                android:layout_width="22dp"
                android:textSize="17sp"
                android:textColor="@color/bg_white"
                android:background="@mipmap/arrow_back"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/message_content_date"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:text="2017-12-06"
            android:textColor="@color/bg_white"
            android:textSize="18sp"
            android:gravity="center"
            />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/message_content_save"
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:textSize="17sp"
                android:textColor="@color/bg_white"
                android:background="@mipmap/save"
                android:gravity="center_vertical"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/message_content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_content_topbar"
        android:orientation="vertical"
        >
        <EditText
            android:id="@+id/message_content_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:textColor="@color/bg_black"
            android:textSize="16sp"
            android:background="@null"
            android:focusable="false"
            />
        <View
            android:id="@+id/message_content_div"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/div_white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <EditText
            android:id="@+id/message_content_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textColor="@color/bg_black"
            android:textSize="16sp"
            android:background="@null"
            android:focusable="false"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/message_content_tabbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/text_yellow"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            >
        <ImageButton
            android:id="@+id/edit_btn"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@mipmap/edit"
            android:layout_marginEnd="10dp"
            />

        <ImageButton
            android:id="@+id/delete_btn"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@mipmap/delete"
            android:layout_marginEnd="15dp"
            />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>